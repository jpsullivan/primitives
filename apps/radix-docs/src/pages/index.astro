---
import MainLayout from '@/layouts/MainLayout.astro';
import Header from '@/components/layouts/Header.astro';
import Announcement from '@/components/layouts/Announcement.astro';
import Contributors from '@/components/layouts/Contributors.astro';
import DemosHomePage from '@/components/layouts/DemosHomePage.astro';
import DemoNoopContainer from '@/components/layouts/DemoNoopContainer.astro';
---

<MainLayout title="Radix Angular">
    <div class="relative z-10 flex min-h-screen flex-col">
        <Header />
        <main class="flex-1">
            <div class="container relative">
                <section
                    class="mx-auto flex max-w-[980px] flex-col items-center gap-2 py-8 md:py-12 md:pb-8 lg:py-24 lg:pb-20"
                >
                    <Announcement title="DropdownMenu component!" href="/primitives/components/dropdown-menu" />

                    <div class="pt-4">
                        <h1
                            class="text-center text-3xl font-bold leading-tight tracking-tighter md:text-6xl lg:leading-[1.1]"
                        >
                            Angular Port of Radix UI
                        </h1>
                        <!--<p class="mt-2 text-center text-lg font-bold md:text-2xl">Angular Port of Radix UI</p>-->
                        <p class="text-muted-foreground max-w-[750px] text-center text-lg sm:text-xl">
                            Unstyled, accessible components for building high-quality design systems and web apps in
                            Angular.
                        </p>

                        <div class="mt-6 flex justify-center space-x-4 md:mt-8">
                            <a
                                href="/primitives/overview/introduction"
                                class="rounded-lg bg-[#FA2C04] px-6 py-2 text-sm font-bold text-white md:py-3 md:text-base"
                            >
                                Get Started
                            </a>
                            <a
                                target="_blank"
                                href="https://github.com/radix-ng/primitives"
                                class="rounded-lg bg-gray-200 px-6 py-2 text-sm font-bold text-gray-700 md:py-3 md:text-base"
                            >
                                View on GitHub
                            </a>
                        </div>
                    </div>
                </section>
                <section class="text-foreground relative mt-12 hidden h-[40rem] w-full overflow-hidden md:block">
                    <div
                        class="border-muted bg-card/20 absolute left-1/2 h-[32rem] w-[80rem] -translate-x-1/2 overflow-hidden rounded-3xl border"
                    >
                        <div class="absolute left-1/2 z-[1] h-[32rem] w-[80rem] -translate-x-1/2 md:block">
                            <div class="absolute left-[16rem] top-8 xl:left-8">
                                <DemoNoopContainer componentName="avatar" componentFile="avatar-demo" />
                            </div>

                            <div class="absolute right-[32rem] top-[24rem] md:right-[30rem] md:top-[4rem]">
                                <DemoNoopContainer componentName="accordion" componentFile="accordion-demo" />
                            </div>

                            <div class="absolute left-[5rem] top-[18rem]">
                                <DemoNoopContainer componentName="collapsible" componentFile="collapsible-demo" />
                            </div>

                            <div class="absolute bottom-[5rem] right-[40rem] hidden md:block xl:right-[40rem]">
                                <DemoNoopContainer componentName="dropdown-menu" componentFile="dropdown-menu-demo" />
                            </div>

                            <div class="absolute bottom-[8rem] right-[20rem] hidden md:block xl:right-[10rem]">
                                <DemoNoopContainer componentName="progress" componentFile="progress-demo" />
                            </div>
                        </div>
                    </div>
                </section>
                <div class="content sm:px-[48px] md:hidden">
                    <div class="mx-auto w-full max-w-[1152px] sm:container">
                        <div class="grid w-auto gap-6 md:gap-12 lg:grid-cols-2 lg:gap-6">
                            <DemosHomePage />
                        </div>
                    </div>
                </div>
                <h2 class="flex flex-wrap justify-center pb-8 pt-5">Contributors</h2>
                <Contributors />
                <div class="pt-10"></div>
            </div>
        </main>
    </div>
</MainLayout>
